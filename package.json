{
  "name": "ha-aframe",
  "version": "1.0.0",
  "description": "VR Heliocentric Architecture using A-Frame",
  "main": "index.js",
  "author": "Trygve Wastvedt (trygve.wastvedt@gmail.com)",
  "license": "MIT",
  "dependencies": {
    "@types/aframe": "^0.5.0",
    "@types/browserify": "^12.0.32",
    "aframe": "^0.6.1",
    "aframe-extras": "^3.10.0",
    "aframe-keyboard-controls": "^1.3.0",
    "aframe-orbit-controls-component-2": "^0.1.12",
    "aframe-physics-system": "^2.0.0",
    "aframe-stereo-component": "^0.6.0",
    "aframe-template-component": "^3.2.1",
    "factor-bundle": "^2.5.0",
    "globstar": "^1.0.0",
    "glslify": "^6.1.0",
    "npm-watch": "^0.2.0",
    "parallelshell": "^3.0.1",
    "tsify": "^3.0.1",
    "typescript": "^2.4.2",
    "watch-cli": "^0.2.2",
    "watchify": "^3.9.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:ts": "browserify src/scenes/hemisphere.scene.ts -p [ tsify --noImplicitAny ] -t glslify -o dist/bundle.js",
    "build:ts-dev": "npm run build:ts -- --debug",
    "build:css": "sass src/style.scss:dist/style.css",
    "build-dev": "npm run copy:html && npm run build:ts-dev",
    "build": "npm run copy:html && npm run build:ts",
    "watch:ts": "watchify src/scenes/hemisphere.scene.ts -p [ tsify --noImplicitAny ] -t glslify -o dist/bundle.js --debug",
    "watch:css": "npm run build:css -- --watch",
    "update": "npm run build:three",
    "install": "npm run update",
    "serve": "live-server --no-browser dist",
    "dev": "parallelshell \"npm run watch:ts\" \"npm run watch:css\" \"npm run serve\""
  }
}
