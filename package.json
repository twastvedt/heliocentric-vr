{
  "name": "ha-aframe",
  "version": "1.0.0",
  "description": "VR Heliocentric Architecture using A-Frame",
  "main": "index.js",
  "author": "Trygve Wastvedt (trygve.wastvedt@gmail.com)",
  "license": "MIT",
  "dependencies": {
    "@types/aframe": "^0.5.0",
    "@types/browserify": "^12.0.33",
    "aframe": "~0.7",
    "aframe-extras": "^3.12.4",
    "aframe-keyboard-controls": "^1.3.0",
    "aframe-orbit-controls-component-2": "^0.1.13",
    "aframe-physics-system": "^2.1.0",
    "aframe-stereo-component": "^0.6.0",
    "aframe-template-component": "^3.2.1",
    "factor-bundle": "^2.5.0",
    "globstar": "^1.0.0",
    "glslify": "^6.1.0",
    "npm-watch": "^0.2.0",
    "parallelshell": "^3.0.2",
    "tsify": "^3.0.3",
    "typescript": "^2.5.3",
    "watch-cli": "^0.2.3",
    "watchify": "^3.9.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:ts": "browserify src/scenes/hemisphere.scene.ts -p [ tsify --noImplicitAny ] -t glslify -o dist/bundle.js",
    "build:ts-dev": "npm run build:ts -- --debug",
    "build:css": "sass src/style.scss:dist/style.css",
    "build-dev": "npm run copy:html && npm run build:ts-dev",
    "build": "npm run copy:html && npm run build:ts",
    "watch:ts": "rm dist/bundle.js && watchify src/scenes/hemisphere.scene.ts -v -p [ tsify --noImplicitAny ] -t glslify -o dist/bundle.js --debug --ignore-watch=\"dist/**/**\"",
    "watch:css": "npm run build:css -- --watch",
    "serve": "live-server --wait=300 --no-browser dist",
    "dev": "parallelshell \"npm run watch:ts\" \"npm run watch:css\" \"npm run serve\""
  },
  "devDependencies": {
    "@types/dateformat": "^1.0.1",
    "aframe-animation-component": "^3.2.5",
    "aframe-sun-sky": "^3.0.3",
    "dateformat": "^3.0.2",
    "glsl-diffuse-oren-nayar": "^1.0.2",
    "suncalc": "^1.8.0"
  }
}
